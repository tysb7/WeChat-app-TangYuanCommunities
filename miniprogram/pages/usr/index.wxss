.page{
  background-color: #F6F6F6;
  height: 100%;
}
.act_info{
  background-color: #fff;
  margin: 30rpx;
  padding:30rpx;
  border-radius: 20rpx;
  box-shadow:3rpx 5rpx 20rpx #B3B3B3;
}
.act_info_item{
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: inline-block;
  border-radius: 10rpx;
  text-align: c
  color: #F6F6F6;
  font-size: 25rpx;
  line-height: 50rpx;
}
.act_info_div{
  width: 8%;
  height: 50rpx;
  margin: 1%;
}
.act_info_item1{
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  display: inline-block;
  margin: 10rpx;
}
.act_info_text{
  display: inline-block;
  position: relative;
  top:-20rpx;
  margin: 0 15rpx;
  color: #8e8e8e;
  font-size: 20rpx;
}
.userinfo-avatar {
  overflow:hidden;  
  display: block;  
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin: auto;
}

.userinfo-avatar:after {
  border: none;
}

.denglu{
  background-image: linear-gradient(to right, #ff2345 0%, #ff663f 100%);
  color: #fff;
}
.denglu:after {
  border: none;
}
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}

.weui-cells:after, .weui-cells:before {
  display: none;
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}

.weui-cell:before {
  right: 15px;
}

.kind-list__item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow:3rpx 5rpx 20rpx #B3B3B3;
}

.kind-list__item:first-child {
  margin-top: 0;
}

.kind-list__img {
  width: 30px;
  height: 30px;
}

.kind-list__item-hd {
  padding: 20px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
  box-shadow:3rpx 5rpx 20rpx #B3B3B3;
}

.kind-list__item-hd_show {
  opacity: 0.4;
  box-shadow:3rpx 5rpx 20rpx #B3B3B3;
}

.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list__item-bd_show {
  height: auto;
} 
